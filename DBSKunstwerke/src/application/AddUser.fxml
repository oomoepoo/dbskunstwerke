<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddUserController">
   <children>
      <ButtonBar layoutX="16.0" layoutY="451.0" prefHeight="36.0" prefWidth="222.0">
        <buttons>
            <Button fx:id="CheckBtn" mnemonicParsing="false" onAction="#handleCheckButtonAction" text="Überprüfen" />
          <Button fx:id="AddBtn" disable="true" mnemonicParsing="false" onAction="#handleAddButtonAction" text="Hinzufügen" />
        </buttons>
      </ButtonBar>
      <VBox focusTraversable="true" layoutX="33.0" layoutY="39.0" spacing="30.0">
         <children>
            <TextField fx:id="txtUsername" promptText="Nutzername" />
            <TextField fx:id="txtPassword" promptText="Passwort" />
            <TextField fx:id="txtEmail" promptText="E-Mail" />
         </children>
      </VBox>
      <VBox layoutX="225.0" layoutY="39.0" spacing="30.0">
         <children>
            <TextField fx:id="txtFirstname" promptText="Vorname" />
            <TextField fx:id="txtSurname" promptText="Nachname" />
         </children>
      </VBox>
      <Label fx:id="StatusLabel" layoutX="32.0" layoutY="382.0" text="Daten eingeben und Überprüfen klicken!">
         <font>
            <Font name="Droid Sans" size="16.0" />
         </font></Label>
      <CheckBox fx:id="cboxArtist" layoutX="228.0" layoutY="153.0" mnemonicParsing="false" text="Künstler">
         <tooltip>
            <Tooltip text="Trägt den Benutzer als Künstler ein, falls ausgewählt." />
         </tooltip>
      </CheckBox>
      <VBox layoutX="32.0" layoutY="262.0" spacing="30.0">
         <children>
            <TextField fx:id="txtStreet" promptText="Straße" />
            <TextField fx:id="txtNumber" promptText="Hausnummer" />
         </children>
      </VBox>
      <VBox layoutX="224.0" layoutY="261.0" spacing="30.0">
         <children>
            <TextField fx:id="txtCountry" promptText="Land" />
            <TextField fx:id="txtCity" promptText="Stadt" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" right="30.0" />
   </padding>
</AnchorPane>
